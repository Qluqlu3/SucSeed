<%=stylesheet_link_tag "admin_edit" %>

<div class="row admin-row">
  <div class="col-2 admin-col-2">
    <ul class="nav flex-column admin-side-menu">
      <li class="nav-item admin-top-link">
        <%= link_to "ユーザー管理", "/admin/management/user", class: "nav-link" %>
      </li>
      <li class="nav-item">
        <%= link_to "日記管理", "/admin/management/diary", class: "nav-link" %>
      </li>
      <li class="nav-item">
        <%= link_to "日記コメント", "/admin/management/diary_comment", class: "nav-link" %>
      </li>
      <li class="nav-item">
        <%= link_to "ギャラリー管理", "/admin/management/gallery", class: "nav-link active disabled" %>
      </li>
      <li class="nav-item">
        <%= link_to "問い合わせ管理", "/admin/management/inquiry", class: "nav-link" %>
      </li>
    </ul>
  </div>
  <div class="col-10 admin-col-9">
    <h1 class="admin-main-title">ギャラリー管理</h1>

    <table class="table table-striped">
      <thead>
        <tr>
          <th scope="col">＃</th>
          <th scope="col">ID</th>
          <th scope="col">ユーザーID</th>
          <th scope="col">画像</th>
          <th scope="col">コメント</th>
          <th scope="col">登録日時</th>
          <th scope="col">削除日時</th>
        </tr>
      </thead>
      <% @gallery.each_with_index do |gallery, i| %>
        <tbody>
          <tr>
            <th scope="row"><%= i + 1 %></th>
            <td><%= gallery.id %></td>
            <td><%= gallery.user_id %></td>
            <td><%= image_tag "#{gallery.data}", size: "100x100" %></td>
            <td><%= gallery.comment %></td>
            <td><%= gallery.created_at %></td>
            <td><%= gallery.deleted_at %></td>
          </tr>
        </tbody>
      <% end %>
    </table>
  </div>
</div>