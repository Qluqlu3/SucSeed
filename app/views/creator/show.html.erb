<h1>Creator#show</h1>
<p>Find me in app/views/creator/show.html.erb</p>

<!-- 編集アイコン -->
<div class="dropdown dropdown-right">
  <button class="btn btn-default dropdown-toggle" type="button" id="dropdownMenu1" data-toggle="dropdown" aria-haspopup="true" aria-expanded="true">
    <span class="glyphicon glyphicon-cog"></span>
    <span class="caret"></span>
  </button>
  <ul class="dropdown-menu dropdown-menu-right" aria-labelledby="dropdownMenu1">
    <li><%= link_to "プロフィール詳細一覧", "/creator/show" %></li>
    <li><%= link_to "プロフィール詳細変更", "/creator/update" %></li>
    <li role="separator" class="divider"></li>
    <li><a href="#">Separated link</a></li>
  </ul>
</div>
<!-- 編集アイコン -->

<div>
  <div class="panel panel-primary panel-margin">
    <div class="panel-heading">
      工芸名
    </div>
    <div class="panel-body">
      <p><%= @creator.title %></p>
    </div>
  </div>

  <div class="panel panel-primary panel-margin">
    <div class="panel-heading">
      工芸カテゴリ
    </div>
    <div class="panel-body">
      <p><%= @art_category.name %></p>
    </div>
  </div>

  <div class="panel panel-primary panel-margin">
    <div class="panel-heading">
      創業年数
    </div>
    <div class="panel-body">
      <p><%= @creator.establishment %></p>
    </div>
  </div>

  <div class="panel panel-primary panel-margin">
    <div class="panel-heading">
      従業員数
    </div>
    <div class="panel-body">
      <p><%= @creator.employee %></p>
    </div>
  </div>


  <div class="panel panel-primary panel-margin">
    <div class="panel-heading">
      作業所郵便番号
    </div>
    <div class="panel-body">
      <p><%= @creator.postal_code %></p>
    </div>
  </div>

  <div class="panel panel-primary panel-margin">
    <div class="panel-heading">
      作業所住所１
    </div>
    <div class="panel-body">
      <p><%= @creator.address_1 %></p>
    </div>
  </div>

  <div class="panel panel-primary panel-margin">
    <div class="panel-heading">
      作業所住所２
    </div>
    <div class="panel-body">
      <p><%= @creator.address_2 %></p>
    </div>
  </div>

  <div class="panel panel-primary panel-margin">
    <div class="panel-heading">
      募集チェックボックス
    </div>
    <div class="panel-body">
      <div class="form-check">
        <input class="form-check-input" type="checkbox" disabled <% if @creator.is_recruitment %>
                                                                  checked
                                                                <% end %>>
        <label class="form-check-label">
          後継者募集中
        </label>
      </div>
    </div>
  </div>

  <div class="panel panel-primary panel-margin">
    <div class="panel-heading">
      紹介文
    </div>
    <div class="panel-body">
      <p><%= simple_format@creator.introduction %></p>
    </div>
  </div>
</div>
