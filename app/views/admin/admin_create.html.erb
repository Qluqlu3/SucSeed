<%= stylesheet_link_tag "admin" %>

<h1 class="admin-main-title">管理者登録</h1>

<!--エラー-->
<div>
  <div>
    <% flash.each do |key, value| %>
      <div class="admin-alert-box alert-<%= key %>"><%= value %></div>
    <% end %>
  </div>
  <% if @admin.errors.any? %>
    <div id="error_explanation" class="error-box admin-error-box">
      <p class="error-title">入力内容にエラーが<%= @admin.errors.count %>件あります</p>
      <ul class="error-index">
        <% @admin.errors.full_messages.each do |message| %>
          <li class="error-content">
            <%= message %>
          </li>
        <% end %>
      </ul>
    </div>
  <% end %>
</div>
<!--エラー-->

<div class="admin-create-box">
  <div class="admin-create-box-in">
    <%= form_for @admin, url: "/admin/create/user" do |f| %>
      <div class="form-group row create-form-box">
        <label class="col-sm-2 col-form-label">ユーザーID</label>
        <div class="col-sm-10">
          <%= f.text_field :user_id, class: "form-control", placeholder: "ユーザーID" %>
        </div>
      </div>
      <div class="form-group row create-form-box">
        <label class="col-sm-2 col-form-label">名前</label>
        <div class="col-sm-10">
          <%= f.text_field :name, class: "form-control", placeholder: "名前" %>
        </div>
      </div>
      <div class="form-group row create-form-box">
        <label class="col-sm-2 col-form-label">パスワード</label>
        <div class="col-sm-10">
          <%= f.password_field :password, class: "form-control", placeholder: "パスワード" %>
        </div>
      </div>
      <div class="form-group row create-form-box">
        <label class="col-sm-2 col-form-label">パスワード確認</label>
        <div class="col-sm-10">
          <%= f.password_field :password_confirmation, class: "form-control", placeholder: "パスワード確認" %>
        </div>
      </div>
      <div class="text-right">
        <%= f.submit "登録", class: "btn btn-lg btn-primary" %>
      </div>
    <% end %>
  </div>
</div>