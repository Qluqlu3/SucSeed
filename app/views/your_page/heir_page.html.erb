    <div class="profile-avatar">
      <%= image_tag "#{@user.avatar_path}", class: "card-img-top img-circle", width: "100%", height: "100%", alt: "アバター画像" %>
    </div>
  </div>

  <div class="content-box top-box">
    <div class="row justify-content-around">
      <div class="col-md-6">
        <div class="card my-card">
          <h3 class="card-header my-card-header">
            性別
          </h3>
          <div class="card-body my-card-body">
            <p class="card-text">
              <% if @user.is_man %>
                男性
              <% else %>
                女性
              <% end %>
            </p>
          </div>
        </div>
      </div>
      <div class="col-md-6">
        <div>
          <div class="card my-card">
            <h3 class="card-header my-card-header">
              年齢
            </h3>
            <div class="card-body my-card-body">
              <p class="card-text">
                <%= date_format = "%Y%m%d"
                    (Date.today.strftime(date_format).to_i - @user.birthday.strftime(date_format).to_i) / 10000
                %>
                <small>歳</small>
              </p>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>

  <div class="card my-card-pro">
    <h3 class="card-header my-card-header-pro">
      紹介文
    </h3>
    <div class="card-body card-body-intro">
      <p class="card-text"><%= simple_format(h(@user.introduction)) %></p>
    </div>
  </div>

  <% if @scout == nil %>
    <div class="appeal-box">
      <%= form_for :scout, url: "/scout/send/#{params[:id]}" do |f| %>
        <%= f.submit "スカウト", class: "btn btn-lg appeal-btn" %>
      <% end %>
    </div>
  <% else %>
    <div class="appeal-box">
      <%= form_for :scout do |f| %>
        <%= f.submit "スカウト済み", class: "btn btn-lg appeal-btn", disabled: true %>
      <% end %>
    </div>
  <% end %>
</div>


