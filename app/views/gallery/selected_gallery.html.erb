<%= stylesheet_link_tag "gallery" %>

<h1><span class="label title-label">ギャラリー</span></h1>

<div class="row my-row">
<!--  right-->
  <div class="col-md-9 selected-gallery-box">
    <div class="selected-gallery-box-in-box">
      <%= image_tag "#{@selected_gallery.data}", class: "", width: "100%", height: "800vh" %>
      <div class="selected-gallery-box-text">
        <p>
          コメント
        </p>
      </div>
      <div>
        <% @selected_gallery.tag_list.each do |tag| %>
          <p class="selected-gallery-tag">
            <span class="label selected-gallery-tag-in">
              <%= tag %>
            </span>
          </p>
        <% end %>
      </div>
    </div>
  </div>
<!--  right-->

<!--  left-->
  <div class="col-md-3 selected-gallery-side">
<!--    user-->
    <div class="user-info-box">
      <div class="user-img-box">
        <%= link_to("/page/#{@selected_gallery_user.user_id}", {method: "get"}) do %>
          <div class="user-img">
            <%= image_tag "#{@selected_gallery_user.avatar_path}", class: "imag-circle", size: "180x180" %>
          </div>
          <div class="user-name">
            <h3>
              <%= @selected_gallery_user.name %>
            </h3>
          </div>
        <% end %>
      </div>
      <div class="card my-card">
        <div class="card-header my-card-header">
          創作作品名
        </div>
        <div class="card-body my-card-body">
          <p class="card-text user-info-text"><%= @selected_gallery_user.title %></p>
        </div>
      </div>

      <div class="card my-card">
        <div class="card-header my-card-header">
          創業年数
        </div>
        <div class="card-body my-card-body">
          <p class="card-text user-info-text"><%= @selected_gallery_user.establishment %>年</p>
        </div>
      </div>

      <div class="card my-card">
        <div class="card-header my-card-header">
          従業員数
        </div>
        <div class="card-body my-card-body">
          <p class="card-text user-info-text"><%= @selected_gallery_user.employee %>人</p>
        </div>
      </div>
    </div>
<!--    first-->
    <div class="side-box">

    </div>
<!--    second-->
    <div class="side-box">

    </div>
<!--    third-->
    <div class="side-box">

    </div>
  </div>
<!--  left-->
</div>
